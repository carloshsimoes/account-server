{
  "name": "account-server",
  "version": "1.0.0",
  "description": "Account server based on User Domain with Clean Architecture concepts.",
  "scripts": {
    "orm:config": "ts-node ./src/application/orm/generate-config.ts",
    "orm:cli": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "orm:migration:gen": "yarn orm:cli migration:generate",
    "orm:migration:run": "yarn orm:cli migration:run",
    "orm:database:clean": "ts-node ./src/application/orm/services/clean-database.ts",
    "orm:database:persist-hosts": "ts-node ./src/application/orm/services/persist-hosts.ts",
    "api:start": "node bin/src/application/api/main.js",
    "compile": "rm -rf bin/ && tsc --project tsconfig.prod.json",
    "compile:watch": "yarn compile -w",
    "lint": "gts lint",
    "lint:clean": "gts clean",
    "lint:fix": "gts fix",
    "test": "jest --runInBand --colors --silent --setupFiles dotenv/config",
    "test:unit": "yarn test --detectOpenHandles --config=test/unit/jest.config.ts",
    "test:integration": "yarn orm:database:persist-hosts && yarn test --config=test/integration/jest.config.ts",
    "test:e2e": "yarn orm:database:persist-hosts && yarn test --config=test/e2e/jest.config.ts",
    "test:all": "yarn test:unit && yarn test:integration && yarn test:e2e",
    "docker:database:up": "docker-compose up -d test-database",
    "docker:api:build": "docker build -t api:latest .",
    "docker:api:up": "docker-compose up -d local-api",
    "docker:down": "docker-compose down -v --rmi=local"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/jest": "^27.0.2",
    "@types/node": "^14.11.2",
    "@types/otplib": "^10.0.0",
    "@types/passport-jwt": "^3.0.6",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.1",
    "dotenv": "^10.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "gts": "^3.1.0",
    "jest": "^27.2.1",
    "moq.ts": "^7.3.4",
    "nodemon": "^2.0.7",
    "supertest": "^6.2.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.0.3",
    "winston": "^3.3.3"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.9",
    "@nestjs/core": "^8.0.9",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/passport": "^8.0.1",
    "@nestjs/platform-express": "^8.0.9",
    "@nestjs/testing": "^8.1.0",
    "@nestjs/typeorm": "^8.0.3",
    "@sendgrid/mail": "^7.6.0",
    "@types/lodash": "^4.14.168",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "lodash": "^4.17.21",
    "otplib": "^12.0.1",
    "passport": "^0.5.0",
    "passport-jwt": "^4.0.0",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7",
    "typeorm": "^0.2.41",
    "uuid": "^8.3.2"
  },
  "eslintConfig": {
    "extends": "./node_modules/gts/",
    "plugins": [
      "simple-import-sort"
    ],
    "rules": {
      "node/no-unpublished-import": 0,
      "node/no-extraneous-import": 0,
      "simple-import-sort/exports": "error",
      "simple-import-sort/imports": "error",
      "no-process-exit": 0
    },
    "ignorePatterns": [
      "bin/",
      "node_modules/",
      "coverage*/",
      ".vscode/"
    ]
  },
  "prettier": "gts/.prettierrc.json"
}
